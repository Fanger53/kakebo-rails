<%= form_with(model: @model) do |form| %>
  

    <%= form.text_field :name, placeholder:'Name of Transfer', class:'form-control mb-3' %>

    <%= form.number_field :amount, placeholder:'Amount of Transfer', class:'form-control mb-3'  %>
  
    <%= collection_select(:transfer, :group_id, Group.all, :id, :name, { :prompt=> 'Group' }, { class: 'form-control mb-3' }  )%>

    <%= form.submit %>
  
<% end %>
