<!DOCTYPE html>
<html>
  <head>
    <title>Kakebo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
    <div class="navbar-brand">
    <a class="navbar-item" href="https://bulma.io">
      <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
    </a>
  </div>
      <div class="dropdown navbar-end is-hoverable">
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu2">
      <span> Menu </span>
      <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-menu2" role="menu">
    <div class="dropdown-content">
      <hr class="dropdown-divider">
      
      <hr class="dropdown-divider">
      <a href="#" class="dropdown-item">
        <%= link_to 'All the Transfers', root_path, class:"button is-info is-fullwidth" %> 
      </a>
      <a href="#" class="dropdown-item">
        <%= link_to 'All Groups', groups_path, class:"button is-info is-fullwidth" %>
      </a>
      <a href="#" class="dropdown-item">
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"button is-info is-fullwidth" %>
      </a>
    </div>
  </div>
</div>
    </nav>
   
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </body>
</html>
